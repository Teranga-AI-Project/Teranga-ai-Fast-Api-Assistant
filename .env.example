# =============================================================================
# TERANGA AI FASTAPI ASSISTANT - CONFIGURATION TEMPLATE
# =============================================================================

# =============================================================================
# API KEYS - INTELLIGENCE ARTIFICIELLE
# =============================================================================

# Groq API Key pour LLM (Llama 3.1)
# Obtenir sur: https://console.groq.com/keys
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# URL de votre projet Supabase
SUPABASE_URL=https://xxxxxxxxxxxxxxxx.supabase.co

# Clé publique Supabase (anon key)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Clé de service Supabase (pour opérations admin)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environnement de déploiement
ENVIRONMENT=development

# Mode debug (true pour développement, false pour production)
DEBUG=true

# Clé secrète pour JWT et sécurité
SECRET_KEY=your-super-secret-key-change-in-production

# Port d'écoute de l'application
PORT=8000

# =============================================================================
# CORS & SÉCURITÉ
# =============================================================================

# Origines autorisées pour CORS (séparées par des virgules)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# Domaines autorisés
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# =============================================================================
# AUDIO PROCESSING CONFIGURATION
# =============================================================================

# Taille maximum des fichiers audio (en MB)
MAX_AUDIO_SIZE=25

# Formats audio supportés
SUPPORTED_AUDIO_FORMATS=wav,mp3,m4a,webm,ogg

# Qualité audio pour STT (sample rate en Hz)
AUDIO_SAMPLE_RATE=16000

# Timeout pour les requêtes STT/TTS (en secondes)
AUDIO_TIMEOUT=30

# =============================================================================
# PERFORMANCE & LIMITS
# =============================================================================

# Nombre maximum de workers Uvicorn
MAX_WORKERS=4

# Timeout général des requêtes (en secondes)
REQUEST_TIMEOUT=300

# Taille maximum des requêtes (en MB)
MAX_REQUEST_SIZE=50

# Limite de tokens pour les réponses LLM
MAX_TOKENS=150

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Niveau de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Format des logs (JSON pour production, TEXT pour développement)
LOG_FORMAT=TEXT

# Activer Sentry pour error tracking (optionnel)
SENTRY_DSN=https://xxxxxxxxxxxxxxxx@sentry.io/xxxxxxx

# =============================================================================
# LANGAGES SUPPORTÉS
# =============================================================================

# Langues supportées (séparées par des virgules)
SUPPORTED_LANGUAGES=fr,en,wo,ar,es,pt

# Langue par défaut
DEFAULT_LANGUAGE=fr

# =============================================================================
# DÉVELOPPEMENT LOCAL UNIQUEMENT
# =============================================================================

# Désactiver HTTPS en développement
DISABLE_HTTPS=true

# Mode verbose pour debug audio
AUDIO_DEBUG=false